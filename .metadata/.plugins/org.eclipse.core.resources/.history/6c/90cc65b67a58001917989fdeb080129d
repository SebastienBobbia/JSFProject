package com.fr.adaming.Domain;

import java.io.Serializable;
import java.util.ArrayList;

import javax.annotation.PostConstruct;
import javax.faces.bean.ManagedBean;
import javax.faces.bean.ManagedProperty;
import javax.xml.ws.Service;

import com.fr.adaming.service.PaysService;

@ManagedBean

public class BeanPays implements Serializable {

	public Pays pays;
	List<Pays> listPays;
	
	@ManagedProperty("#{paysService}")
    private PaysService service;
	
	@PostConstruct
	public void init() {
	
		listPays = service.getListPays();
	}

	public List<Pays> getListPays() {
		return listPays;
	}

	public void setListPays(List<Pays> listPays) {
		this.listPays = listPays;
	}

	public String nom;
	public String description;


	public String getNom() {
		return nom;
	}

	public void setNom(String nom) {
		this.nom = nom;
	}

	public String getDescription() {
		return description;
	}

	public void setDescription(String description) {
		this.description = description;
	}

	public Pays getPays() {
		return pays;
	}

	public void setPays(Pays pays) {
		this.pays = pays;
	}	

}
